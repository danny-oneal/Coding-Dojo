@model LoginRegistration.Models.User

<div class="grid">
    <div class="bg-white rounded shadow-lg p-8 m-4">
        <h1 class="w-full text-center text-gray-800 text-2xl font-bold mb-6">Create Account</h1>
        <form asp-controller="Home" asp-action="Register" method="post">
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="FirstName">First Name</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="FirstName" />
                <span class="text-red-500" asp-validation-for="FirstName"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="LastName">Last Name</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="LastName" />
                <span class="text-red-500" asp-validation-for="LastName"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="Email">Email</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="Email" type="email" />
                <span class="text-red-500" asp-validation-for="Email"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="Password">Password</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="Password" type="password" />
                <span class="text-red-500" asp-validation-for="Password"></span>
            </div>
            <div class="grid mb-6">
                <label class="mb-2 font-bold text-lg text-gray-700" for="PasswordConfirm">Confirm Password</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="PasswordConfirm" type="password" />
                <span class="text-red-500" asp-validation-for="PasswordConfirm"></span>
            </div>
            <button class="w-full bg-blue-500 hover:bg-blue-600 text-white uppercase text-lg mx-auto p-2 rounded" type="submit">Create Account</button>
        </form>
    </div>
</div>