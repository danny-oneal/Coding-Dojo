@model LoginRegistration.Models.LoginUser

<div class="grid">
    <div class="bg-white rounded shadow-lg p-8 m-4">
        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">Login</h1>
        <form asp-controller="Home" asp-action="Login" method="post">
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="LoginEmail">Email</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="LoginEmail" type="email" />
                <span class="text-red-500" asp-validation-for="LoginEmail"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="LoginPassword">Password</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="LoginPassword" type="password" />
                <span class="text-red-500" asp-validation-for="LoginPassword"></span>
            </div>
            <button class="w-full bg-blue-500 hover:bg-blue-600 text-white uppercase text-lg mx-auto p-2 rounded" type="submit">Login</button>
        </form>
    </div>
</div>