@{
    ViewData["Title"] = "Create Product";
}

@model Product

<div class="grid grid-cols-2 justify-between gap-8">
    <form asp-controller="Product" asp-action="Create" method="post">
        <div class="bg-gray-800 text-white rounded shadow-lg p-8">
            <h1 class="block w-full text-center text-2xl font-bold mb-6">Create Product</h1>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg " for="Name">Product Name</label>
                <input asp-for="Name" class="border py-2 px-3 text-black" />
                <span class="text-red-500" asp-validation-for="Name"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg " for="Description">Description</label>
                <textarea asp-for="Description" class="border py-2 px-3 text-black"></textarea>
                <span class="text-red-500" asp-validation-for="Description"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg " for="Price">Price</label>
                <input asp-for="Price" class="border py-2 px-3 text-black">
                <span class="text-red-500" asp-validation-for="Price"></span>
            </div>
            <button class="w-full bg-blue-500 hover:bg-blue-600 text-white uppercase text-lg mx-auto p-2 rounded" type="submit">Create Product</button>
        </div>
    </form>
    <div class="justify-self-center">
        @foreach (Product product in ViewBag.Products)
        {
            <ul class="space-y-8">
                <li><a asp-controller="Product" asp-action="View" asp-route-id="@product.ProductId" class="text-3xl text-blue-500 hover:text-blue-700 underline">@product.Name</a></li>
            </ul>
        }
    </div>
</div>
