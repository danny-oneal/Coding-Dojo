@{
    ViewData["Title"] = "Create Category";
}

@model Category

<div class="grid grid-cols-2 justify-between gap-8">
    <form asp-controller="Category" asp-action="Create" method="post">
        <div class="bg-gray-800 text-white rounded shadow-lg p-8">
            <h1 class="block w-full text-center text-2xl font-bold mb-6">Create Category</h1>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg" for="Name">Category Name</label>
                <input class="border py-2 px-3 text-black" asp-for="Name" />
                <span class="text-red-500" asp-validation-for="Name"></span>
            </div>
            <button class="w-full bg-blue-500 hover:bg-blue-600 text-white uppercase text-lg mx-auto p-2 rounded" type="submit">Create Category</button>
        </div>
    </form>
    <div class="justify-self-center">
        @foreach (Category category in ViewBag.Categories)
        {
            <ul class="space-y-8">
                <li><a asp-controller="Category" asp-action="View" asp-route-id="@category.CategoryId" class="text-3xl text-blue-500 hover:text-blue-700 underline">@category.Name</a></li>
            </ul>
        }
    </div>
</div>