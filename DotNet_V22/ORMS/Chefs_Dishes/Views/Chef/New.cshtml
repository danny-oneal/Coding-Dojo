@{
    ViewData["Title"] = "Create Chef";
}

@model ChefDishes.Models.Chef

<div class="grid">
    <div class="bg-white rounded shadow-lg p-8">
        <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">Create Chef</h1>
        <form asp-controller="Chef" asp-action="Create" method="post">
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="FirstName">First Name</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="FirstName" />
                <span class="text-red-500" asp-validation-for="FirstName"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="LastName">Last Name</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="LastName" />
                <span class="text-red-500" asp-validation-for="LastName"></span>
            </div>
            <div class="grid mb-4">
                <label class="mb-2 font-bold text-lg text-gray-700" for="Birthday">Birthday</label>
                <input class="border py-2 px-3 text-grey-darkest" asp-for="Birthday" type="date" />
                <span class="text-red-500" asp-validation-for="Birthday"></span>
            </div>
            <button class="w-full bg-blue-500 hover:bg-blue-600 text-white uppercase text-lg mx-auto p-2 rounded" type="submit">Create Chef</button>
        </form>
    </div>
</div>